config BOARD
    default "native" if BOARD_NATIVE

config BOARD_NATIVE
    bool
    default y
    select CPU_MODEL_NATIVE

    # Put defined MCU peripherals here (in alphabetical order)
    select HAS_PERIPH_RTC
    select HAS_PERIPH_RTC_MS
    select HAS_PERIPH_TIMER
    select HAS_PERIPH_UART
    select HAS_PERIPH_GPIO
    select HAS_PERIPH_PWM
    select HAS_PERIPH_QDEC

    # Various other features (if any)
    select HAS_ETHERNET
    select HAS_MOTOR_DRIVER
    select HAVE_SDL

    # This will always select littlefs2 but we would prefer to use something
    # that is already selected if possible...
    # Restructuring is needed in order to make that happen without circular
    # dependencies.
    select MODULE_LITTLEFS2 if MODULE_VFS_DEFAULT
    select MODULE_MTD if MODULE_VFS_DEFAULT

rsource "drivers/Kconfig"
